.header
  %p= @recipe.name
  - if @recipe.recipe_image
    %p= image_tag(attachment_url(@recipe, :recipe_image), style: "height: 200px")
  - else
    %p= image_tag("default.jpg", style: "height: 200px")
%panel.panel-info
  .panel-heading-text
    Ingredients
  %ul.list-group
    - @recipe.ingredients.each do |ingredient|
      %li.list-group-item
        = ingredient.meat
        = ingredient.vegetable
        = ingredient.seasoning
        = ingredient.fruit
        = ingredient.grain
        -# = link_to edit_recipe_ingredient_path(@recipe, ingredient) do
        -#   Edit
%panel.panel-info
  .panel-heading-text
    Instructions
  %ul.list-group
    %li.list-group-item
      %p= @recipe.instructions

.page-header
  = link_to new_recipe_ingredient_path(@recipe), class: 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    Add Ingredient
  = link_to recipes_path, class: "btn btn-default" do
    %span.glyphicon.glyphicon-list-alt
    Back to Recipes
