.container
  .jumbotron
    .form-group
      Enter Ingredients!
      = form_tag(recipes_path, :method => "get", id: "search-form") do
        = text_field_tag :search, params[:search], placeholder: "chicken,rice,etc..."
        = submit_tag "Search"
      - if @recipes.present?
        -# = debug(@recipes)
        = render @recipes
      - else
        %p
          Could not find recipe!




